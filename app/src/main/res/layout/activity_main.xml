<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ozhan.mustafa.ann.MainActivity">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/et_position"
            android:layout_alignBottom="@+id/et_position"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Position:"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/et_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:ems="5"
            android:gravity="center"
            android:hint="-15 to +15" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/et_angel"
            android:layout_alignBottom="@+id/et_angel"
            android:layout_toLeftOf="@+id/et_angel"
            android:layout_toStartOf="@+id/et_angel"
            android:text="Angel:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_angel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:ems="5"
            android:gravity="center"
            android:hint="0° to 180°" />




        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:gravity="center"
            android:layout_marginTop="33dp"
            android:text="Iteration"
            android:textSize="18sp"
            android:layout_below="@+id/et_position"
            android:layout_centerHorizontal="true" />



        <Button
            android:id="@+id/button_calculate"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="39dp"
            android:text="Calculate"
            android:layout_below="@+id/tv_result"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
